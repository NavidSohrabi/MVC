@model List<WebApplication_MVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<center>
    @Html.ActionLink("Create", "Create", "Product", new { name = "" }, new { @class = "btn btn-info" })
</center>


<h2>List</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.FirstOrDefault().BrandName)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.FirstOrDefault().ModelNo)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.FirstOrDefault().Description)
        </th>
        <th>
            Modify
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <td>
            @item.BrandName
        </td>
        <td>
            @item.ModelNo
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    }

</table>
